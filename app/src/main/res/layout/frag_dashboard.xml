            <LinearLayout
                android:id="@+id/ll_frag_dashboard_graph_root1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_rect_white_alpha_normal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dashboard_items_padding">

                    <TextView
                        android:id="@+id/tv_frag_dashboard_reported_data_indicator_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/reported_data_indicator_title"
                        android:textSize="@dimen/fontsize_extra_tiny" />

                    <TextView
                        android:id="@+id/tv_frag_dashboard_reported_data_show_hide_details1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="@string/reported_data_show_details_title"
                        android:textSize="@dimen/fontsize_extra_tiny" />
                </RelativeLayout>

                <com.circular.circular.ui.ChartRoot
                    android:id="@+id/ct_frag_dashboard_reported_data_root"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:padding="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="@drawable/round_rect_white_alpha_normal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_frag_dashboard_featured_projects_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/txtclr_darker_gray"
                    android:textSize="@dimen/fontsize_extra_tiny"
                    android:text="@string/featured_projects"/>

                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/slider_dashboard"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    app:sliderAnimationDuration="600"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorGravity="center_horizontal|bottom"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="2dp"
                    app:sliderIndicatorRadius="2dp"
                    app:sliderIndicatorSelectedColor="#FFFF0000"
                    app:sliderIndicatorUnselectedColor="#FF000000"
                    app:sliderScrollTimeInSec="1" />
            </LinearLayout>
        </LinearLayout>
