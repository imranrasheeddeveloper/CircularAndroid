<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/tv_frag_dashboard_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard"
        android:textColor="@android:color/black"
        android:textSize="@dimen/fontsize_normal" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_white_alpha_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dashboard_items_padding">

                    <ImageView
                        android:id="@+id/iv_frag_dashboard_your_data_reports"
                        android:layout_width="@dimen/dashboard_imageview_size"
                        android:layout_height="@dimen/dashboard_imageview_size"
                        android:background="@drawable/round_rect_green_normal"
                        android:padding="5dp"
                        android:src="@drawable/your_total_reports" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_dashboard_your_data_reports_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_total_data_reports"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_super_tiny" />

                        <TextView
                            android:id="@+id/tv_frag_dashboard_your_data_reports_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="320"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_small"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_white_alpha_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dashboard_items_padding">

                    <ImageView
                        android:id="@+id/iv_frag_dashboard_your_total_green_initiatives"
                        android:layout_width="@dimen/dashboard_imageview_size"
                        android:layout_height="@dimen/dashboard_imageview_size"
                        android:background="@drawable/round_rect_yellow_normal"
                        android:padding="10dp"
                        android:src="@drawable/yout_total_green_initials" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_dashboard_your_total_green_initiatives_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_total_green_initiatives"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_super_tiny" />

                        <TextView
                            android:id="@+id/tv_frag_dashboard_your_total_green_initiatives_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_small"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_white_alpha_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dashboard_items_padding">

                    <ImageView
                        android:id="@+id/iv_frag_dashboard_our_total_funding_partners"
                        android:layout_width="@dimen/dashboard_imageview_size"
                        android:layout_height="@dimen/dashboard_imageview_size"
                        android:background="@drawable/round_rect_red_normal"
                        android:padding="10dp"
                        android:src="@drawable/our_total_funding_partners" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_dashboard_our_total_funding_partners_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/our_total_funding_partners"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_super_tiny" />

                        <TextView
                            android:id="@+id/tv_frag_dashboard_our_total_funding_partners_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="101"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_small"
                            android:textStyle="bold"/>

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/round_rect_white_alpha_normal"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/dashboard_items_padding">

                    <ImageView
                        android:id="@+id/iv_frag_dashboard_our_total_stakeholders"
                        android:layout_width="@dimen/dashboard_imageview_size"
                        android:layout_height="@dimen/dashboard_imageview_size"
                        android:background="@drawable/round_rect_purple_normal"
                        android:padding="10dp"
                        android:src="@drawable/our_total_stakeholders" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_frag_dashboard_our_total_stakeholders_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/our_total_stakeholders"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_super_tiny" />

                        <TextView
                            android:id="@+id/tv_frag_dashboard_our_total_stakeholders_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="125"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/fontsize_small"
                            android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

