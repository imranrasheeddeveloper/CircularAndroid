<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/round_rect_white_alpha_normal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/tv_lvitem_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="A"
                android:textSize="@dimen/fontsize_tiny"
                android:singleLine="true"
                android:textColor="@color/txtclr_darker_gray"/>

            <TextView
                android:id="@+id/tv_lvitem_notification_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="A"
                android:textSize="@dimen/fontsize_tiny"
                android:singleLine="true"
                android:textColor="@color/txtclr_darker_gray"/>

            <TextView
                android:id="@+id/tv_lvitem_notification_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="A"
                android:textSize="@dimen/fontsize_extra_tiny"
                android:singleLine="true"
                android:textColor="@color/txtclr_dark_gray"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_lvitem_notification_eye"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/eye_green"
            android:layout_marginBottom="5dp"
            android:padding="10dp"/>
    </LinearLayout>
</RelativeLayout>