<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_main" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#AA000000"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="@dimen/hor_margin_main_content_sign"
        android:paddingEnd="@dimen/hor_margin_main_content_sign">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:background="@drawable/oval_white"
                android:src="@drawable/logo_1" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center|bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_frag_reset_pwd_enter_code_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reset_pwd"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontsize_small"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:padding="5dp">

                    <EditText
                        android:id="@+id/ed_frag_reset_pwd_enter_code_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_dark_white_normal"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:minWidth="50dp"
                        android:minHeight="55dp"
                        android:text=""
                        android:textSize="@dimen/fontsize_xx_large" />

                    <RelativeLayout
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/ed_frag_reset_pwd_enter_code_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_dark_white_normal"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:minWidth="50dp"
                        android:minHeight="55dp"
                        android:text=""
                        android:textSize="@dimen/fontsize_xx_large" />

                    <RelativeLayout
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/ed_frag_reset_pwd_enter_code_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_dark_white_normal"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:minWidth="50dp"
                        android:minHeight="55dp"
                        android:text=""
                        android:textSize="@dimen/fontsize_xx_large" />

                    <RelativeLayout
                        android:layout_width="15dp"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/ed_frag_reset_pwd_enter_code_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rect_dark_white_normal"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:minWidth="50dp"
                        android:minHeight="55dp"
                        android:text=""
                        android:textSize="@dimen/fontsize_xx_large" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_frag_reset_pwd_enter_code_reset"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/round_rect_red_selector"
                    android:gravity="center_horizontal"
                    android:padding="5dp"
                    android:text="@string/reset"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontsize_big" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_frag_reset_pwd_enter_code_login_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/signup_login"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontsize_super_tiny" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_frag_reset_pwd_enter_code_create_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/signin_create_account"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/fontsize_super_tiny" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>